<?xml version="1.0" encoding="UTF-8"?>

<Configuration strict="true">
  <Appenders>
    <!-- Override XML and company duplicate logging -->
    <Null name="XML_FILE" />
    <Null name="COMPANY_LOG_ROUTING_TEXT_FILE" />

    <Appender name="CONSOLE" type="Console">
      <Layout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t][%c{1}:%L] %m%n" type="PatternLayout" />
    </Appender>

    <Appender filePattern="@liferay.home@/logs/liferay.%d{yyyy-MM-dd}.log" ignoreExceptions="false" name="TEXT_FILE" type="RollingFile">
      <Layout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t][%c{1}:%L] %m%n" type="PatternLayout" />

      <TimeBasedTriggeringPolicy />

      <DirectWriteRolloverStrategy />
    </Appender>
  </Appenders>

  <Loggers>
    <!-- Log reindexing info -->
    <Logger level="INFO" name="com.liferay.portal.search.internal.SearchEngineInitializer" />

    <Root level="INFO">
      <AppenderRef ref="CONSOLE" />
      <AppenderRef ref="TEXT_FILE" />
    </Root>
  </Loggers>
</Configuration>
